<% layout("layout") %>



<div class="d-flex">
    <div id="chats-container" class="bg-light">
        <a href="/" class="d-flex align-items-center p-3 link-dark text-decoration-none border-bottom">
            <span class="fs-5 fw-semibold">Chats</span>
        </a>
        <div class="list-group list-group-flush border-bottom shadow-sm">
            <a href="#" class="list-group-item list-group-item-action active py-3 lh-tight" aria-current="true">
                <div class="d-flex w-100 align-items-center justify-content-between">
                    <strong class="mb-1">Client 1</strong>
                    <small>Wed</small>
                </div>
                <div class="col-10 mb-1 small">Okay, got it!</div>
            </a>
            <a href="#" class="list-group-item list-group-item-action py-3 lh-tight">
                <div class="d-flex w-100 align-items-center justify-content-between">
                    <strong class="mb-1">Client 2</strong>
                    <small class="text-muted">Thu</small>
                </div>
                <div class="col-10 mb-1 small">Remind me at 9PM tomorrow.</div>
            </a>
        </div>        
    </div>

    <div class="flex-fill shadow-sm">
        <div class="container p-4">
            <div id="message-container">
                <div class="card shadow mb-4" id="profile-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title fw-bold">Client 1</h5>
                                <small class="card-subtitle text-muted d-inline-block"><i class="fa fa-phone-alt" style="margin-right: 8px;"></i>(+1) 123-456-789</small>  
                                <small class="card-subtitle text-muted d-inline-block"><i class="fa fa-at" style="margin-right: 4px;"></i>example@example.com</small>  
                            </div>                           

                            <div>
                                <a class="btn btn-secondary" href="mailto:example@example.com"><i class="fa fa-envelope"></i></a>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete-confirm-modal"><i class="fa fa-trash"></i></button>
                            </div>
                        </div>
                        <!-- <button class="btn btn-primary"><i class="fa fa-envelope"></i></button> -->
                    </div>
                </div>
                
                <div class="card message-card shadow-sm">
                    <div class="card-body">
                        <p class="card-text">
                            Hello!
                        </p>
                    </div>
                </div>

                <div class="card message-card inverse bg-primary text-light shadow-sm">
                    <div class="card-body">
                        <p class="card-text">
                            Hi, how can I help you?
                        </p>
                    </div>
                </div>

                <div class="card message-card shadow-sm">
                    <div class="card-body">
                        <p class="card-text">
                            I am having troubles with this.
                        </p>
                    </div>
                </div>
            </div>

            <form method="POST">
                <input type="text" placeholder="Message.." class="form-control w-75 d-inline shadow-sm">
                <button type="submit" class="btn btn-primary shadow-sm"><i class="fa fa-paper-plane"></i></button>                
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="delete-confirm-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Close session?</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to close this session?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger">Close</button>
            </div>
        </div>
    </div>
</div>